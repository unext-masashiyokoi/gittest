<div class="row">
            <div class="col-xs-12">
<div class="row">
                    <% @blogs.each do |blog| %>
                      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
<hr>
                      <h2 class="h4" style="height:19px;overflow:hidden;">
                         <% if blog.content_flg == 'blog' %>
                           <i class="fa fa-newspaper-o" aria-hidden="true"></i> <%= link_to blog.title, blog %>
                         <% else %>
                           <i class="fa fa-file-image-o" aria-hidden="true"></i> <%= link_to blog.title, '/photos/' + blog.id.to_s %>
                         <% end %>
                         
</h2> 
                      <div class="row">
                      <div class=<%= blog.photos.present? ? "col-xs-9 col-sm-9" : "col-xs-12 col-sm-12" %> >
                      </div>
                      </div>
                       <p><%= link_to image_tag(blog.user.image, class:"img-circle", style: 'width:auto;height:auto;max-width:45px; max-height:45px;' ), blog.user.account_id %><%= link_to blog.user.name, blog.user.account_id, class:"label" %>
                         <!--<i class="fa fa-rss-square fa-lg fa-green"></i>
                         <i class="fa fa-check-square fa-orange fa-lg"></i>-->
                         <i class="glyphicon glyphicon-time"></i><label class="label"><%= blog.created_at.strftime('%y.%m.%d') %></lebel>
</p>
                    </div>
                    <% end %>
          </div>
<hr>

            </div>

