<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class:"form-control", rows:20 %>
    <% f.text_area :content, :id=>"seditor" %>
  </div>
  <div class=field>
    <%= f.label :image %><br>
    <%= f.file_field :image, :class => "btn btn-small btn-primary btn-inverse" %>
  </div>
  <% for photo in current_user.photos.limit(20).order('id desc') %>
  <div class="field">
    <%= radio_button_tag "blog[photo_ids][]", photo.id, @blog.photos.include?(photo) %>
    <%= photo.name %>
    <code>
      &lt;a href="<%= photo_path(photo) %>" &gt;&lt;img data-original=<%= image_path(photo.image_url) %> &gt;&lt;/a&gt;
    </code>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :draft_flg %><br>
    <%= f.check_box :draft_flg, class:"form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class:"form-control" %>
  </div>
<% end %>
