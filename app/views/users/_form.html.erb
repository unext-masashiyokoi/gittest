<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :profile %><br>
    <%= f.text_area :profile %>
  </div>
  <% for genre in Genre.all %>
  <div class="field">
    <%= check_box_tag "user[genre_ids][]", genre.id, @user.genres.include?(genre) %>
    <%= genre.title %>
  </div>
  <% end %>
  <div class=field>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
