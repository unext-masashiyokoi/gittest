<p id="notice"><%= notice %></p>

<%= image_tag @photo.image_url, width: '300' %>
<p class"strong">
  <%= @photo.name %>
</p>
<p>
  <%= simple_format( @photo.comment, {}, {:sanitize => false}) %>
</p>
<p>
  <%= @photo.created_at.strftime('%Y/%m/%d %H:%M') %>
</p>
<p class"strong">
  posted by <%= link_to image_tag(@photo.user.image, class:"img-circle", style: 'width:20px;' ), @photo.user.name %><%= link_to @photo.user.name, username_path(@photo.user.name) %>
</p>
<p>
</p>
<% if user_signed_in? %>
<% link_to 'Edit', edit_photo_path(@photo) %> |
<% end %>
<%= link_to 'Back', :back %>
