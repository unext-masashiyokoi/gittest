<p id="notice"><%= notice %></p>
<div class="row">
<% if @future_photo != nil %>
<div class="pull-left"><%= link_to @future_photo.name.truncate(10, omission: '...') + ' ' + @future_photo.created_at.strftime('%y.%m.%d'), '/photos/' + @future_photo.id.to_s %></div>
<% end %>
<% if @past_photo != nil %>
<div class="pull-right"><%= link_to @past_photo.name.truncate(10, omission: '...') + ' ' + @past_photo.created_at.strftime('%y.%m.%d'), '/photos/' + @past_photo.id.to_s %></div>
<% end %>
</div>
<p class="lead">
<%= link_to image_tag(@photo.user.image, class:"img-circle", style: 'width:50px;' ), username_path(@photo.user.account_id) %>
  <%= @photo.name %>
</p>
<p>
<%= image_tag @photo.image_url, class: 'img-thumbnail' %>
</p>
<p>
  <%= simple_format( @photo.comment, {}, {:sanitize => false}) %>
</p>
<p>
  posted by <%= link_to image_tag(@photo.user.image, class:"img-circle", style: 'width:20px;' ), username_path(@photo.user.account_id) %><%= link_to @photo.user.name, username_path(@photo.user.account_id) %> <label class="label"><%= @photo.created_at.strftime('%Y/%m/%d %H:%M:%S') %></label><a href="/licence.html"><img src="/uploads/photo/image/229/allrightreserved.png" style="width:20px"> All rights reserved</a>
</p>
<code>
  &lt;a href="<%= photo_path(@photo) %>" &gt;&lt;img data-original=<%= image_path(@photo.image_url) %> &gt;&lt;/a&gt;
</code>
</p>
<% if user_signed_in? %>
<%= link_to 'Edit', edit_photo_path(@photo) %> |
<% end %>
<%= link_to 'Back', :back %>
<div class="row">
<% if @future_photo != nil %>
<div class="pull-left"><%= link_to @future_photo.name.truncate(10, omission: '...') + ' ' + @future_photo.created_at.strftime('%y.%m.%d'), '/photos/' + @future_photo.id.to_s %></div>
<% end %>
<% if @past_photo != nil %>
<div class="pull-right"><%= link_to @past_photo.name.truncate(10, omission: '...') + ' ' + @past_photo.created_at.strftime('%y.%m.%d'), '/photos/' + @past_photo.id.to_s %></div>
<% end %>
</div>
