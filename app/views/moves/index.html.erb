<p id="notice"><%= notice %></p>

<h1>Listing Moves</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Transportation</th>
      <th>Distance</th>
      <th>Time</th>
      <th>Journal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.title %></td>
        <td><%= move.transportation %></td>
        <td><%= move.distance %></td>
        <td><%= move.time %></td>
        <td><%= link_to move.journal.title, move.journal %></td>
        <td><%= link_to 'Show', move %></td>
        <td><% if user_signed_in? %><%= link_to 'Edit', edit_move_path(move) %>
        <%= link_to 'Destroy', move, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Move', new_move_path %>
<% end %>
